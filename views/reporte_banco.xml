<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_banco">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2><span t-esc="res_company.name"/>: Libro de banco conciliado</h2>

                    <div class="row mt32">
                        <!-- <div class="col-xs-4">
                            <strong>Cuenta: </strong> <span t-esc="data['cuenta_bancaria_id'][1]"/><br/>
                        </div> -->
                        <strong>Fecha hasta: </strong> <span t-esc="data['fecha_hasta']" t-esc-options='{"widget": "date"}'/>
                        <!-- <div class="col-xs-4">
                            <strong>Fecha inicial: </strong> <span t-esc="data['fecha_desde']" t-esc-options='{"widget": "date"}'/><br/>
                            <strong>Fecha hasta: </strong> <span t-esc="data['fecha_hasta']" t-esc-options='{"widget": "date"}'/>
                        </div> -->
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>Cuenta</th>
                                <th>Saldo Final</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="lineas(True, data)" t-as="l">
                                <td><span t-esc="l['codigo']"/></td>
                                <td><span t-esc="l['cuenta']"/></td>
                                <td><span t-esc="l['saldo_final']"/></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row mt32">
                        <div class="col-xs-4">
                            <strong>Hecho por: ___________________________</strong>
                        </div>
                        <div class="col-xs-4">
                        </div>
                        <div class="col-xs-4">
                            <strong>Revisado por: ___________________________</strong>
                        </div>
                    </div>

                    <div class="row mt32">
                        <div class="col-xs-4">
                            <strong>Vo. Bo.: ___________________________</strong>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
