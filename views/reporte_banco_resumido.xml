                        <br/>
                        <br/>
                        <t t-set="lineas" t-value="reporte['lineas']['nota_credito']"/>
                        <table style="font-size: 90%;margin:0px auto 0px auto;width:800px">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Doc</th>
                                    <th>Nombre</th>
                                    <th>Concepto</th>
                                    <th class="text-right">Credito</th>
                                    <th class="text-right">Debito</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="lineas" t-as="l">
