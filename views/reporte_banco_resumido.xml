                        <br/>
                        <br/>
                        <t t-set="lineas" t-value="reporte['lineas']['pendientes_deposito']"/>
                        <table style="font-size: 90%;margin:0px auto 0px auto;width:800px">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Tipo Documento</th>
                                    <th>Numero</th> 
                                    <th class="text-right">Monto</th>
